group("public") {
  # Meta-target, don't link into production code.
  testonly = true
  deps = [
    ":sdk",
    "cpp/bindings",
    "cpp/test:test_mojom",
    "interfaces/bindings/tests:test_interfaces",
    "rust:all",
  ]

  if (is_android) {
    deps += [
      "java:bindings_java",
      "java:system_java",
    ]
  }
}

group("sdk") {
  deps = [
    "c/system",
    "cpp/bindings",
    "rust:mojo_rust_system_api",
  ]
}

group("fuzzers") {
  deps = [ "tools/fuzzers" ]
}
