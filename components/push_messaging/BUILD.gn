}

source_set("unit_tests") {
  testonly = true
  sources = [ "app_identifier_unittest.cc" ]
  deps = [
    ":push_messaging",
    ":test_support",
    "//base/test:test_support",
    "//testing/gtest",
    "//url",
  ]
}
