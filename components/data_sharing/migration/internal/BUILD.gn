}

source_set("internal") {
  defines = [ "IS_DATA_SHARING_MIGRATION_IMPL=1" ]

  sources = [
    "base_migratable_sync_service.cc",
    "migratable_sync_bridge.cc",
    "migratable_sync_service_coordinator_impl.cc",
    "migratable_sync_service_coordinator_impl.h",
