  proto_in_dir = "//"

  # Generate JS so it can be used by chrome extensions
  generate_javascript = true

  sources = [ "synced/record.proto" ]

  deps = [
    ":health_proto",
    ":record_constants",
  ]
}

proto_extras("record_proto_extras") {
  sources = [ "synced/record.proto" ]
  deps = [
    ":health_proto",
    ":record_constants",
    ":record_proto",
  ]
  extras_deps = [
    ":health_proto_extras",
    ":record_constants_extras",
  ]
  protobuf_full_support = true
}

