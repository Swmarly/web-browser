import("//build/config/android/rules.gni")
import("//third_party/jni_zero/jni_zero.gni")

generate_jni("browser_binding_jni") {
  sources = [
    "java/src/org/chromium/components/enterprise/client_certificates/BrowserKey.java",
    "java/src/org/chromium/components/enterprise/client_certificates/BrowserKeyStore.java",
  ]
}

android_library("browser_binding_java") {
  sources = [
    "java/src/org/chromium/components/enterprise/client_certificates/BrowserKey.java",
    "java/src/org/chromium/components/enterprise/client_certificates/BrowserKeyStore.java",
  ]
  deps = [
    "//base:base_java",
    "//build/android:build_java",
    "//third_party/androidx:androidx_annotation_annotation_java",
    "//third_party/blink/public/mojom:android_mojo_bindings_java",
    "//third_party/jni_zero:jni_zero_java",
  ]
}

android_library("unit_device_javatests") {
  testonly = true
  sources = [ "javatests/src/org/chromium/components/enterprise/client_certificates/BrowserKeyStoreTest.java" ]
  deps = [
    ":browser_binding_java",
    "//base:base_java_test_support",
    "//third_party/androidx:androidx_annotation_annotation_java",
    "//third_party/androidx:androidx_test_monitor_java",
    "//third_party/androidx:androidx_test_runner_java",
    "//third_party/blink/public/mojom:android_mojo_bindings_java",
    "//third_party/junit",
    "//third_party/mockito:mockito_java",
    "//ui/android:ui_java_test_support",
  ]
}
