import("//build/config/android/rules.gni")
import("//third_party/jni_zero/jni_zero.gni")

android_library("device_attestation_java") {
  srcjar_deps = [ ":jni_headers" ]
  sources = [
    "java/src/org/chromium/components/enterprise/device_attestation/AttestationBlobGenerator.java",
    "java/src/org/chromium/components/enterprise/device_attestation/AttestationBlobGeneratorDelegate.java",
    "java/src/org/chromium/components/enterprise/device_attestation/BlobGenerationResult.java",
  ]

  deps = [
    "//base:base_java",
    "//base:service_loader_java",
    "//build/android:build_java",
    "//third_party/androidx:androidx_annotation_annotation_java",
    "//third_party/jni_zero:jni_zero_java",
  ]
}

generate_jni("jni_headers") {
  sources = [
    "java/src/org/chromium/components/enterprise/device_attestation/AttestationBlobGenerator.java",
    "java/src/org/chromium/components/enterprise/device_attestation/BlobGenerationResult.java",
  ]
}

robolectric_library("junit") {
  sources = [ "java/src/org/chromium/components/enterprise/device_attestation/AttestationBlobGeneratorTest.java" ]

  deps = [
    ":device_attestation_java",
    "//base:base_junit_test_support",
    "//third_party/androidx:androidx_test_runner_java",
    "//third_party/junit",
  ]
}

static_library("android") {
  sources = [
    "attestation_utils.cc",
    "attestation_utils.h",
  ]

  deps = [
    ":jni_headers",
    "//base",
    "//components/enterprise/device_attestation:common",
    "//crypto",
  ]
}
