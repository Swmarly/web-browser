<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item
        android:top="@dimen/app_menu_shadow_length"
        android:left="@dimen/app_menu_shadow_length"
        android:bottom="@dimen/app_menu_shadow_length"
        android:right="@dimen/app_menu_shadow_length">
        <shape
            android:shape="rectangle">
            <corners android:radius="?attr/popupBgCornerRadius" />
            <solid android:color="@macro/menu_bg_color"/>
            <padding
                android:top="@dimen/app_menu_padding"
                android:left="@dimen/app_menu_shadow_length"
                android:bottom="@dimen/app_menu_padding"
                android:right="@dimen/app_menu_shadow_length" />
        </shape>
    </item>
</layer-list>
