import("//build/config/android/rules.gni")
import("//third_party/jni_zero/jni_zero.gni")

android_library("java") {
  sources = [
    "java/src/org/chromium/components/sync_preferences/cross_device_pref_tracker/CrossDevicePrefTracker.java",
    "java/src/org/chromium/components/sync_preferences/cross_device_pref_tracker/TimestampedPrefValue.java",
  ]
  deps = [
    "//base:tasks_java",
    "//components/sync_device_info:sync_device_info_java",
    "//third_party/jni_zero:gendeps_java",
    "//third_party/jni_zero:jni_zero_java",
  ]
  srcjar_deps = [ ":jni_headers" ]
}

generate_jni("jni_headers") {
  sources = [
    "java/src/org/chromium/components/sync_preferences/cross_device_pref_tracker/CrossDevicePrefTracker.java",
    "java/src/org/chromium/components/sync_preferences/cross_device_pref_tracker/TimestampedPrefValue.java",
  ]
}
