import("../../build_webui_tests.gni")

build_webui_tests("build") {
  files = [ "boca_receiver_app_test.ts" ]

  is_chrome_untrusted = true

  ts_path_mappings = [
    "chrome-untrusted://class-tools-remote-display/*|" + rebase_path(
            "$root_gen_dir/ash/webui/boca_receiver_app_ui/resources/untrusted/tsc/*",
            target_gen_dir),
    "chrome-untrusted://webui-test/*|" +
        rebase_path("$root_gen_dir/chrome/test/data/webui/chromeos/tsc/*",
                    target_gen_dir),
  ]

  ts_deps = [
    "//ash/webui/boca_receiver_app_ui/resources/untrusted:build_ts",
    "//chrome/test/data/webui/chromeos:build_ts",
  ]
}
