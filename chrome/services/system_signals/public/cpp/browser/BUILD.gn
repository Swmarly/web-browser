source_set("browser") {
  public = [ "system_signals_service_host_impl.h" ]

  sources = [ "system_signals_service_host_impl.cc" ]

  configs += [ "//build/config/compiler:wexit_time_destructors" ]

  public_deps = [
    "//components/device_signals/core/browser",
