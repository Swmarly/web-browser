<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_query_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/settings_search_ui_height"
    android:layout_marginStart="@dimen/settings_search_ui_horizontal_margin"
    android:layout_marginEnd="@dimen/settings_search_ui_horizontal_margin"
    android:layout_gravity="end"
    android:gravity="center_vertical"
    android:background="@drawable/pill_background"
    android:visibility="gone">
    <ImageView
        android:id="@+id/back_arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:contentDescription="@string/back"
        app:tint="@color/default_icon_color_tint_list"/>
    <EditText
        android:id="@+id/search_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/search_in_settings_hint"
        android:drawableTint="?android:textColorPrimary"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.TextLarge.Primary"
        android:singleLine="true"
        android:importantForAutofill="no" />
</LinearLayout>
