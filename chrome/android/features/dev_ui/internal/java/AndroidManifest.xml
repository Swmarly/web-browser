<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    featureSplit="dev_ui">

    <dist:module
        dist:title="@string/dev_ui_module_title">
        <dist:delivery>
            <dist:on-demand/>
            <dist:install-time>
                <dist:conditions>
                    <!-- Install DevUI for desktop devices at install time -->
                    <dist:device-feature dist:name="com.google.desktop.gms"/>
                </dist:conditions>
            </dist:install-time>
        </dist:delivery>
        <dist:fusing dist:include="true" />
    </dist:module>

    <application />
</manifest>
