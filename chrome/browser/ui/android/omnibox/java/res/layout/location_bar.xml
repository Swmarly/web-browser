    <include layout="@layout/location_status"/>
    <include
        android:nextFocusForward="@+id/tab_switcher_button"
        layout="@layout/url_bar"/>

    <include layout="@layout/url_action_container"/>
    <include layout="@layout/navigation_attachments_bar"/>
</merge>
