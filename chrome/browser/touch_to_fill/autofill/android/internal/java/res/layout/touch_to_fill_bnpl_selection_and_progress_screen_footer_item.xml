<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/ttf_for_payments_terms_label_margin_horizontal"
    android:layout_marginBottom="@dimen/bnpl_footer_margin_bottom">

    <TextView
        android:id="@+id/bnpl_terms_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ttf_for_payments_terms_label_margin_top"
        android:gravity="center"
        android:screenReaderFocusable="true"
        android:textAppearance="@style/TextAppearance.TextSmall.Secondary" />

    <org.chromium.ui.widget.TextViewWithClickableSpans
        android:id="@+id/bnpl_footer_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.TextSmall.Secondary" />

</LinearLayout>
